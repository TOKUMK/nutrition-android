<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="10dip" >
    
  <RelativeLayout 
        android:id="@+id/widgetWrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <TextView
        android:id="@+id/tvNutrientName"
        android:text="Protein"
        android:textSize="50sp"
        android:textStyle="bold"  
        android:layout_marginRight="15dip"      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvNutrientValue"
		android:text="20grams"
		android:textSize="18sp"        
		android:layout_alignBaseline="@+id/tvNutrientName"
        android:layout_toRightOf="@+id/tvNutrientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
   	<TextView
        android:id="@+id/tvDailyPercentage"
        android:textSize="15sp" 
		android:textStyle="bold"
		android:layout_alignBaseline="@+id/tvNutrientValue"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </RelativeLayout>
  

</RelativeLayout> 